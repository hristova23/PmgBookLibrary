@model BookViewModel
@using Library.Infrastructure.Data.Models
@using Microsoft.AspNetCore.Identity;


<div class="card col-4" style="width: 20rem; margin: 2px;">
	<img class="card-img-top" style="height: 18rem; display: block;"
    src="~/img/bookcovers/@Model.ImageUrl" alt="Book Image" asp-append-version="true">
    <div class="card-body">
        <h5 class="card-title mt-1">@Model.Title</h5>
        <p class="mb-0">Publisher: @Model.Publisher</p>
        <p>Category: @Model.Category</p>
    </div>
    
    <form class="input-group-sm" asp-controller="Books" asp-action="Details" asp-route-bookId="@Model.Id">
        <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
    </form>
</div>
