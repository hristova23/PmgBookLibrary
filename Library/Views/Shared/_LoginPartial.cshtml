@using Library.Infrastructure.Data.Models
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> SignInManager;
@inject UserManager<ApplicationUser> UserManager;

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="All">Transactions</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Add">Add Transaction</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Books" asp-action="All">Books</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Add">Add Book</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Favorites">Favorite Books</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Mine">My Books</a>
    </li>
    <li class="nav-item">
        <form class="getstarted" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
            <button type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="getstarted" asp-controller="User" asp-action="Register">Register</a>
    </li>
    <li>
        <a class="getstarted" asp-controller="User" asp-action="Login">Login</a>
    </li>
}


