@model AddTransactionViewModel

@{
    ViewData["Title"] = "Create";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea.edit-with-tinymce",
        relative_urls: false,
        remove_script_host : false,
        convert_urls : true,
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    }); 
</script>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<form asp-action="Add" method="post">
    <div class="card p-4">
        <div>
            <label asp-for="@Model.RecieverEmail"></label>
            <input asp-for="@Model.RecieverEmail" class="form-control"/>
            <span asp-validation-for="@Model.RecieverEmail" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="@Model.Quantity"></label>
            <input asp-for="@Model.Quantity" class="form-control"/>
            <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="@Model.Message"></label>
            <textarea asp-for="@Model.Message" class="form-control edit-with-tinymce"></textarea>
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>
        <hr />
        <input type="submit" class="btn btn-dark" value="Add"/>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}